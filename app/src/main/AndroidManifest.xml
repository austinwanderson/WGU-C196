<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.austinwayneanderson.wgustudentscheduler">
    <uses-permission android:name = "android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WGUStudentScheduler">
        <activity android:name=".TermsActivity"></activity>
        <activity android:name=".CoursesActivity" />
        <activity android:name=".AssessmentsActivity" />
        <activity android:name=".NewAssessmentActivity" />
        <activity android:name=".NewCourseActivity" />
        <activity android:name=".NewNoteActivity" />
        <activity android:name=".NewTermActivity" />
        <activity android:name=".CourseNotesActivity" />
        <activity android:name=".CourseInstructorsActivity" />
        <activity android:name=".NewInstructorActivity" />
        <activity android:name=".AssessmentDetailActivity" />
        <activity android:name=".CourseDetailActivity" />
        <activity android:name=".TermDetailActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name= ".NotificationPublisher" />
    </application>

</manifest>